
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    <!--Bootstrap CSS-->
    <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />

    <!--Fullcalendar plugin-->

    <link href="~/fullcalendar/lib/main.css" rel="stylesheet" />
    <script src="~/fullcalendar/lib/main.js"></script>
    <script src="~/fullcalendar/lib/locales-all.js"></script>
    <link href='https://use.fontawesome.com/releases/v5.0.6/css/all.css' rel='stylesheet'>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <script>

        document.addEventListener('DOMContentLoaded', function () {
            

            var calendarEl = document.getElementById('calendar');

            var calendar = new FullCalendar.Calendar(calendarEl, {
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                initialDate: '2022-05-01',
                locale: "tr",
                themeSystem: "bootstrap",
                navLinks: true, // can click day/week names to navigate views
                selectable: true,
                selectMirror: true,
                select: function (arg) {
                    var title = prompt('Etkinlik Başlığı:');
                    
                    
                    if (title) {
                        calendar.addEvent({
                            title: title,
                            start: arg.start,
                            end: arg.end,
                            allDay: arg.allDay
                        });
                        console.log(arg);
                        $.post("/Home/AddNewEvent", { title: title, start: arg.startStr, end: arg.endStr }, function (data, status) {
                            if (data == "OK") {
                                alert("Eklendi");
                            }
                        });
                    }
                    calendar.unselect()
                },
                eventClick: function (arg) {
                    if (confirm('Bu etkinliği silmek istediğinize emin misiniz?')) {

                        console.log(arg.event._def.publicId);
                        $.post("/Home/RemoveEvent", { id: arg.event._def.publicId }, function (data, status) {
                            if (data == "OK") {
                                alert("Kayıt Silindi");
                            } else {
                                alert(data);
                            }
                        });
                        arg.event.remove();
                    }
                },
                editable: true,
                dayMaxEvents: true, // allow "more" link when too many events
                events: "/Home/tumEtkinlikleriGetir",
      

            });

            calendar.render();
        });

    </script>
</head>
<body>

    <div class="container" style="margin-top: 30px; align-content: center; margin-bottom: 50px;">
        <div class="row-cols-auto">
            <div id='calendar'></div>
        </div>
        

        

    </div>

    <!--Bootstrap Script Files-->
    <script src="~/twitter-bootstrap/js/bootstrap.js"></script>
</body>
</html>
